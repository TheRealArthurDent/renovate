{
  "assignees": [
    "TheRealArthurDent"
  ],
  "branchPrefix": "renovate/",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update rev variables in pre-commit-config",
      "fileMatch": [
        "^.pre-commit-config.yaml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s+rev:\\s+[\"']?(?<currentValue>[\\w+\\.\\-]*)[\"']?"
      ]
    }
  ],
  "dependencyDashboard": true,
  "forkProcessing": "disabled",
  "gitAuthor": "Renovate Bot <dobecksmischer+renovate@gmail.com>",
  "onboarding": true,
  "packageRules": [
    {
      "automerge": false,
      "description": "Always create PRs for major changes.",
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "addLabels": [
        "patch"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "addLabels": [
        "minor"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "addLabels": [
        "major"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "addLabels": [
        "docker"
      ],
      "matchCategories": [
        "docker"
      ]
    },
    {
      "addLabels": [
        "python"
      ],
      "matchCategories": [
        "python"
      ]
    }
  ],
  "platform": "github",
  "rebaseWhen": "behind-base-branch",
  "repositories": [
    "TheRealArthurDent/raspberry",
    "TheRealArthurDent/smart-home",
    "TheRealArthurDent/nextcloud",
    "TheRealArthurDent/private-cloud-infrastructure",
    "TheRealArthurDent/private-cloud-nextcloud",
    "TheRealArthurDent/node-red-flows"
  ],
  "reviewers": [
    "TheRealArthurDent",
    "LunaticGardener"
  ],
  "username": "P4ranoidAndroid"
}
